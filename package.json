    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@becode/eslint-config": "^0.9.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "bulma": "^0.9.0",
